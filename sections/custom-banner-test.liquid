
    
    {%- style -%}
    
    
    .inside-padding{
    padding: calc({{ section.settings.padding_inside }}px * 0.75);
    
    }

    
{%- endstyle -%}

<div class="custom-banner{{ section.id }}">
    <div class="color-{{ section.settings.color_scheme }} gradient inside-padding">
        {% for block in section.blocks %}
        <div class="message {% if block.settings.fallback %}fallback{% endif %}"
            data-utm="{{ block.settings.utm_parameter_value }}">
            {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
                {{ block.settings.message }}
            </a>
            {% else %}
            {{ block.settings.message }}
            {% endif %}
        </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{ "name":
    "custom-banner",
        "settings" : [
            {
                "type" : "color_scheme",
                "id" : "color_scheme",
                "label" : "t:sections.all.colors.label",
                "default" : "scheme-1"
            },
           
            {
                "type" : "range",
                "id" : "padding_inside",
                "min" : 0,
                "max" : 100,
                "step" : 4,
                "unit" : "px",
                "label" : "Padding inside text box",
                "default" : 12
            }
        ],
                "blocks": [
                {
                "type": "message",
                "name": "Message",
                "settings": [
                {
                "type": "text",
                "id": "message",
                "label": "Message"
                },
                {
                "type": "checkbox",
                "id": "fallback",
                "label": "Fallback"
                },
                {
                "type": "text",
                "id": "utm_parameter_value",
                "label": "UTM Parameter Value"
                },
                {
                "type": "url",
                "id": "link",
                "label": "Link"
                }
                ]
                }
                ],

                                "presets" : [ {
                                    "name" : "custom-banner"
                                } ]
}

{% endschema %}